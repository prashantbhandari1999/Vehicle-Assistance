<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#c7c7c7</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textcolor">@color/text_color_dark</item>
        <item name="backgroundcolor">@color/colorBackground</item>

    </style>

    <style name="SignUpTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundcolor">@color/colorBackground</item>
        <item name="textcolor">#ffffff</item>
        <item name="tintcolor">#fff</item>
    </style>

    <style name="SignUpTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SignUpTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="SignUpTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <style name="DarkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#222222</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#ff6000</item>
        <item name="backgroundcolor">#000</item>
        <item name="textcolor">#ffffff</item>
        <item name="tintcolor">#fff</item>
    </style>


    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:windowBackground">@drawable/background_spalshscreen</item>


    </style>

</resources>
