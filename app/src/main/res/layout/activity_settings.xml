<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <RelativeLayout
        android:id="@+id/relativelayout1_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/textView_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dark Theme"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_alignParentStart="true"/>
        <Switch
            android:id="@+id/switch1"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:layout_alignParentEnd="true"/>


        <View
            android:id="@+id/horizontalline1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/switch1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#444"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayout2_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativelayout1_settings">

        <TextView
            android:id="@+id/textView_notif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App Notificatios"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_alignParentStart="true"/>
        <Switch
            android:id="@+id/switch2"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:layout_alignParentEnd="true"/>

        <View
            android:id="@+id/horizontalline2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/switch2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#444"
            />

    </RelativeLayout>
    <TextView
        android:id="@+id/textView_feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feedback"
        android:textSize="16sp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/relativelayout2_settings"
        android:layout_alignParentStart="true"/>


    <View
        android:id="@+id/horizontalline3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textView_feedback"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#444"
        />


    <TextView
        android:id="@+id/textView_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:textSize="16sp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/textView_feedback"
        android:layout_alignParentStart="true"/>


    <View
        android:id="@+id/horizontalline4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textView_about"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#444"
        />

    <TextView
        android:id="@+id/textView_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share"
        android:textSize="16sp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/textView_about"
        android:layout_alignParentStart="true"/>


    <View
        android:id="@+id/horizontalline5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textView_share"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#444"
        />



    <TextView
        android:id="@+id/textView_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:textSize="16sp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/textView_share"
        android:layout_alignParentStart="true"/>


    <View
        android:id="@+id/horizontalline6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textView_logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#444"
        />





</RelativeLayout>